<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <report
                id="res_partner_report"
                model="orm_api.student"
                string="Reporte de estudiantes"
                report_type="qweb-pdf"
                name="orm_api.partner_report"
                file="orm_api.partner_report"
        />

        <template id="partner_report">
            <t t-call="report.html_container">
                <t t-call="report.external_layout">
                    <div class="page">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Apellido</th>
                                    <th>GÃ©nero</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="data" t-as="line">
                                    <!--
                                        Si los datos que estamos leyendo provienen directamente del modelo,
                                        podemos usar el atributo t-field, pero si es de una lista o dict
                                        debemos usar t-esc, de lo contrario dara error,
                                        ese fue el ultimo error que vimos.
                                        Gracias por soportar!! xD
                                    -->
                                    <tr>
                                        <td>
                                            <span t-esc="line.get('nombre')"/>
                                        </td>
                                        <td>
                                            <span t-esc="line.get('apellido')"/>
                                        </td>
                                        <td>
                                            <span t-esc="line.get('genero')"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>

                        </table>
                    </div>
                </t>
            </t>
        </template>

    </data>
</openerp>
